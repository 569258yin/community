<div class="widget-list-picker">
	<ul class="options">
		{{#each items as |item|}}
			<li class="option {{if item.selected 'selected'}}" {{action 'onToggle' item}}>
				<div class="text text-truncate">{{get item nameField}}</div>
				{{#if item.selected}}
					<i class="material-icons">check</i>
				{{/if}}
			</li>
		{{/each}}
	</ul>
</div>
